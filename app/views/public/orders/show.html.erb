<p>注文履歴詳細</p>

<strong>注文情報</strong>
 <table class="table table-bordered">
          <tr>
            <th class="table-secondary">注文日</th><td><%= @order.created_at %></td>
          </tr>

          <tr>
            <th class="table-secondary">配送先</th><td><%= @order.shipping_address %></td>
          </tr>

          <tr>
            <th class="table-secondary">支払い方法</th><td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
          </tr>

          <tr>
            <th class="table-secondary">ステータス</th><td><%= Order.statuses_i18n[@order.status] %></td>
          </tr>
  </table>

<strong>請求情報</strong>
 <table class="table table-bordered">
          <tr>
            <th class="table-secondary">商品合計</th><td><%= @total %></td>
          </tr>

          <tr>
            <th class="table-secondary">配送料</th><td><%= @order.shipping_fee %></td>
          </tr>

          <tr>
            <th class="table-secondary">ご請求額</th><td><%= @order.billing_amount %></td>
          </tr>

  </table>


<strong>注文内容</strong>

<table class="table table-bordered">

        <thead>
          <tr class="table-secondary">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>

            <td><%= order_detail.item.name %>
            </td>

            <td><%= order_detail.price %>
            </td>

            <td><%= order_detail.amount %>
            </td>

            <td><%= order_detail.amount * order_detail.price %>
            </td>
          </tr>
          <% end %>
        </tbody>
 </table>


