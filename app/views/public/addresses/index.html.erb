<h2>配送先登録/一覧</h2>
<%= form_with model: @address,url: addresses_path, method: :post do |f| %>

  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %><br />
  <%= f.text_field :postal_code %></br>
  </div>
  <div class="field">
    <%= f.label "住所" %><br />
  <%= f.text_field :address %></br>
  </div>
  <div class="field">
    <%= f.label "宛名" %><br />
  <%= f.text_field :name %></br>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <thead>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
      <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %>
          <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除する",  address_path(address.id), method: :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>