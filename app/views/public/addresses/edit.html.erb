<h2>配送先編集</h2>
<%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %><br />
  <%= f.text_field :postal_code %></br>
  </div>
  <div class="field">
    <%= f.label "住所" %><br />
  <%= f.text_field :address %></br>
  </div>
  <div class="field">
    <%= f.label "宛名" %><br />
  <%= f.text_field :name %></br>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>