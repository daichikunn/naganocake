<h2>商品新規登録</h2>

<%= form_with model: @item,url: admin_items_path, method: :post do |f| %>
  <%= f.label "商品画像" %></br>
  <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %></br>
  <div class="field">
    <%= f.label "商品名" %><br />
    <%= f.text_field :name, placeholder: "商品名" %>
  </div>

<div class="field">
  <%= f.label "商品説明" %></br>
 <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></br>
 </div>
<div>
<%= f.label "ジャンル" %></br>
<%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>  <%#= f.check_box.is_active ? '販売中' : '販売停止中' %>
  </div>
  <div class="field">
    <%= f.label "税抜価格" %><br />
    <%= f.text_field :price, placeholder: "1000" %>円
  </div>

  <div class="field">
    <%= f.label "販売ステータス" %><br />
    <%#= f.label Item.is_actives.key(0) %>
    <%= f.label "販売中" %>
    <%= f.radio_button :is_active, true %>
    <%#= f.label Item.is_actives.key(1) %>
      <%= f.label "販売停止中"%>
  <%= f.radio_button :is_active, false %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>