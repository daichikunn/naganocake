<h2>商品一覧</h2>

<%= link_to '新規登録', new_admin_item_path, class: 'btn btn-primary'%>


     <table>
        <thead>
          <tr>
            <th>商品id</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
        <% @items.each do |item|%>
          <tr>
            <td><%= item.id %>
            </td>

            <td><%= link_to item.name, admin_item_path(item)%>
            </td>

            <td><%= item.price %>
            </td>

            <td><%= item.genre %>
            </td>

            <td><%= item.is_active %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
