<h2>商品編集</h2>

<%= form_with model: @item ,url: admin_item_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label "商品画像" %><br />
  <%= f.file_field :image, accept: "image/*" %></br>
  </div>

  <div class="field">
    <%= f.label "商品名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label "商品説明" %><br />
  <%= f.text_area :introduction %></br>
  </div>

<div>
<%= f.label "ジャンル" %></br>
<%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>  <%#= f.check_box.is_active ? '販売中' : '販売停止中' %>
  </div>

  <div class="field">
    <%= f.label "税抜価格" %><br />
    <%= f.text_field :price, placeholder: "1000" %>円
  </div>


  <div class="field">
    <%= f.label "販売ステータス" %><br />
    <%#= f.label Item.is_actives.key(0) %>
    <%= f.label "販売中" %>
    <%= f.radio_button :is_active, true %>
    <%#= f.label Item.is_actives.key(1) %>
      <%= f.label "販売停止中"%>
  <%= f.radio_button :is_active, false %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>