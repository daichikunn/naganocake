<h2>商品編集</h2>

<%= form_with model: @item do |f| %>
  <div class="field">
    <%= f.label "商品画像" %><br />   
  <%= f.file_field :image, accept: "image/*" %></br>
  </div>

  <div class="field">
    <%= f.label "商品名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label "商品説明" %><br />
  <%= f.text_area :text %></br>
  </div>
  
  <div class="field">
  <%= f.label "ジャンル" %><br />
  <%#= f.check_box.is_active ? '販売中' : '販売停止中' %>
  </div>
  
  <div class="field">
    <%= f.label "税抜価格" %><br />
    <%= f.text_field :price, placeholder: "1000" %>円
  </div>

  <div class="field">
    <%= f.label "販売ステータス" %><br />
    <%#= f.text_field :is_active, placeholder: "商品名" %>
  </div>


  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>