<h2><%= @customer.full_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="field">
  <%= f.label "氏名" %>
  <%= f.text_field :last_name %>  <%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label "フリガナ" %>
  <%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label "販売ステータス" %><br />
    <%#= f.label Item.is_actives.key(0) %>
    <%= f.label "有効" %>
    <%= f.radio_button :is_deleted, false %>
    <%#= f.label Item.is_actives.key(1) %>
      <%= f.label "退会"%>
  <%= f.radio_button :is_deleted, true %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>