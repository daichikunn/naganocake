<h2>注文履歴一覧</h2>

      <table class= "table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
      <% @customers.each do |customer|%>
          <tr>
            <td><p><%= customer.id %></p>
            </td>
            <td><p><%= link_to customer.full_name, admin_customer_path(customer)%></p>
            </td>
             <td><p><%= customer.email %></p>
            </td>
            <td><p><% if customer.is_deleted %>
                     有効
                   <% else %>
                     退会
                   <% end %>
                </p>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>
