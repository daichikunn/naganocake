<h2>注文履歴一覧</h2>

      <table class= "table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
      <% @orders.each do |order|%>
          <tr>
            <td><p><%= link_to admin_order_path(order) do %>
            <%= l order.created_at %></p>
            <% end %>
            </td>
            <td><p><%= order.customer.full_name %></p>
            </td>
            <% @amount_total = 0 %>
            <td><p><% order.order_details.each do |order_detail| %>
            <%= @amount_total += order_detail.amount %>
            <% end %>
            <%= @amount_total %>
                </p>
            </td>
             <td><p><%= Order.statuses_i18n[order.status] %></p>
            </td>

          </tr>
            <% end %>
        </tbody>
      </table>
